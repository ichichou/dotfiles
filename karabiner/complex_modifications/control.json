{
  "title": "06. Control Key",
  "rules": [
    {
      "description": "[Control] Caps Lock + J/L (simul) → かな/英数",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "j"
              },
              {
                "key_code": "caps_lock"
              }
            ],
            "simultaneous_options": {
              "key_up_when": "all"
            }
          },
          "to": [
            {
              "key_code": "japanese_kana"
            },
            {
              "key_code": "left_control"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "l"
              },
              {
                "key_code": "caps_lock"
              }
            ],
            "simultaneous_options": {
              "key_up_when": "all"
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description": "[Control] LControl + J/L (simul) → かな/英数",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "j"
              },
              {
                "key_code": "left_control"
              }
            ],
            "simultaneous_options": {
              "key_up_when": "all"
            }
          },
          "to": [
            {
              "key_code": "japanese_kana"
            },
            {
              "key_code": "left_control"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "l"
              },
              {
                "key_code": "left_control"
              }
            ],
            "simultaneous_options": {
              "key_up_when": "all"
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    },
    {
      "description": "[Control] Caps Lock → Control/ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "[Control] LControl → Control/ESC",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "[Control] LCotrol-J/L → かな/英数",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_kana"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            }
          ]
        }
      ]
    },
    {
      "description": "[Control] LControl-M → Return",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "[Control] LControl-S → Shift-Control-R (for Google IME)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "r",
              "modifiers": [
                "shift",
                "control"
              ]
            }
          ]
        }
      ]
    }
  ]
}
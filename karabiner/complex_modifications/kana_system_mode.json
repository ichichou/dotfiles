{
  "title": "Kana System Mode",
  "rules": [
    {
      "description": "Kana System Mode",
      "manipulators": [
        {
          "var/conditions": [
            {
              "type": "variable_if",
              "name": "kana_system_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q"
          },
          "to_if_alone": [
            {
              "key_code": "q",
              "repeat": false
            }
          ],
          "to": [
            {
              "set_variable": {
                "name": "kana_system_mode",
                "value": 1
              }
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "kana_system_mode",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "o"
          },
          "to": [
            {
              "set_variable": {
                "name": "kana_layout_invalid",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "kana_system_mode",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "i"
          },
          "to": [
            {
              "set_variable": {
                "name": "kana_layout_invalid",
                "value": 0
              }
            },
            {
              "key_code": "japanese_kana",
              "repeat": false
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "kana_system_mode",
              "value": 1
            }
          ]
        }
      ]
    }
  ]
}
{
  "title": "02. Vim",
  "rules": [
    {
      "description": "[Vim] Control-C → ESC, 英数",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "japanese_eisuu",
              "repeat": false
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.vim\\.MacVim$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "[Vim] I/A + J (simul) → I/A, かな",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "i"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "to": [
            {
              "key_code": "i"
            },
            {
              "key_code": "japanese_kana",
              "repeat": false
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.vim\\.MacVim$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "a"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "to": [
            {
              "key_code": "a"
            },
            {
              "key_code": "japanese_kana",
              "repeat": false
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.vim\\.MacVim$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "i"
              },
              {
                "key_code": "j"
              }
            ],
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "i",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "japanese_kana",
              "repeat": false
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.vim\\.MacVim$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "a"
              },
              {
                "key_code": "j"
              }
            ],
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "japanese_kana",
              "repeat": false
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.vim\\.MacVim$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
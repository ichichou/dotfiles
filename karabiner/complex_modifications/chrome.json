{
  "title": "Custom 01: Google Chrome",
  "rules": [
    {
      "description": "[Chrome] LCommand-N → 新しいタブを開く",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com.google.Chrome"]
            }
          ],
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    },
    {
      "description": "[Chrome] LCommand-T → 閉じたタブを開く",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com.google.Chrome"]
            }
          ],
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": ["left_command", "left_shift"]
            }
          ]
        }
      ]
    },
    {
      "description": "[Chrome] LCommand-Q → Q",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com.google.Chrome"]
            }
          ],
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "q"
            }
          ]
        }
      ]
    }
  ]
}

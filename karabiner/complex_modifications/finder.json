{
  "title": "Custom 02: Finder",
  "rules": [
    {
      "description": "[Finder] LCommand-N → 新しいタブを開く",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^com.apple.finder"]
            }
          ],
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": ["left_command"]
            }
          ]
        }
      ]
    }
  ]
}

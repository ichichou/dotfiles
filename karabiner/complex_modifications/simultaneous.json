{
  "title": "03. Simultaneous",
  "rules": [
    {
      "description": "[Simul] V + M / V + N → Return",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "v"
              },
              {
                "key_code": "m"
              }
            ]
          },
          "to": [
            {
              "key_code": "return_or_enter",
              "repeat": false
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "v"
              },
              {
                "key_code": "n"
              }
            ]
          },
          "to": [
            {
              "key_code": "return_or_enter",
              "repeat": false
            }
          ]
        }
      ]
    },
    {
      "description": "[Simul] F + J → Sticky Shift / AquaSKK StickyKey",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "f"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "to": [
            {
              "sticky_modifier": {
                "left_shift": "toggle"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_unless",
              "input_sources": [
                {
                  "language": "ja"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "f"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "to": [
            {
              "key_code": "comma",
              "modifiers": [
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "ja"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "[Simul] G + H → AquaSKK ToggleKana",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "g"
              },
              {
                "key_code": "h"
              }
            ]
          },
          "to": [
            {
              "key_code": "semicolon",
              "modifiers": [
                "control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "ja"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "[Simul] F + G → [] / H + J →()",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "f"
              },
              {
                "key_code": "g"
              }
            ]
          },
          "to": [
            {
              "key_code": "open_bracket"
            },
            {
              "key_code": "close_bracket"
            },
            {
              "key_code": "left_arrow",
              "repeat": false
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "h"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "to": [
            {
              "key_code": "9",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "0",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "left_arrow",
              "repeat": false
            }
          ]
        }
      ]
    }
  ]
}
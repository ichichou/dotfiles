[core]
    editor = vim
    pager = less -M
    quotepath = false
    excludesfile = ~/.gitignore_global

[diff]
    renames = true

[fetch]
    prune = true

[merge]
    ff = false

[pull]
    ff = only

[color]
    ui = auto

[alias]
    a = add
    aa = add --all
    br = branch
    bra = branch --all
    brd = branch --delete
    cl = clone
    cm = commit
    cmm = commit --message
    co = checkout
    cob = checkout -b
    di = diff
    fe = fetch
    fep = fetch --prune
    lg = log
    lgg = log --graph --oneline --decorate
    lgp = log --patch
    mg = merge
    pl = pull
    ps = push
    psd = push --delete
    psu = push --set-upstream
    rl = reflog
    s = status --short --branch
    sh = show
    ss = status


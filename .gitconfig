[user]
    name = ichichou
    email = flower.sun.rain.silver@gmail.com

[core]
    editor = vim
    pager = less -cm
    quotepath = false
    excludesfile = ~/.gitignore_global

[diff]
    renames = true

[merge]
    ff = false

[pull]
    ff = only

[color]
    ui = auto

[alias]
    a = add
    aa = add --all
    br = branch
    bra = branch --all
    brd = branch --delete
    cl = clone
    clr = clone --recursive
    cm = commit
    cma = commit --all
    cmm = commit --message
    cmp = commit --patch
    co = checkout
    cob = checkout -b
    d = diff
    f = fetch
    lg = log
    lgg = log --graph --oneline --decorate
    lgp = log --patch
    mg = merge
    pl = pull
    ps = push
    rl = reflog
    s = status --short --branch
    sh = show
    ss = status


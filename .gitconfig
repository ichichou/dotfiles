[user]
    name = ichichou
    email = 35998815+ichichou@users.noreply.github.com

[core]
    editor = vim
    pager = less -MS
    quotepath = false
    ignorecase = false

[init]
    defaultBranch = main

[commit]
    verbose = true

[diff]
    algorithm = histogram
    compactionHeuristic = true
    tool = vimdiff

[fetch]
    prune = true

[merge]
    ff = false
    tool = vimdiff

[pull]
    ff = only

[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less

[interactive]
    diffFilter = diff-highlight

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[credential]
	helper = osxkeychain

{
  "copyMarkdownAsHtml.breaks": true,
  "copyMarkdownAsHtml.linkify": true,
  "editor.fontFamily": "Hack, Noto Sans Mono CJK JP, monospace",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "files.defaultLanguage": "markdown",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "html.format.endWithNewline": true,
  "html.format.wrapLineLength": 0,
  "japanese-proofreading.textlint.全角文字と半角文字の間": false,
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.preview.breaks": true,
  "search.smartCase": true,
  "workbench.colorTheme": "Verdandi",
  "workbench.iconTheme": "verdandi",
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.quickSuggestions": true,
    "editor.snippetSuggestions": "top"
  }
}
